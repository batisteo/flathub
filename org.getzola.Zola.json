{
    "app-id": "org.getzola.Zola",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "zola",
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "CARGO_HOME" : "/run/build/Zola/cargo",
            "RUST_BACKTRACE" : "1"
        }
    },
    "modules": [
        {
            "name": "zola",
            "buildsystem": "simple",
            "build-commands": [
                "cargo build --release",
                "install -D target/release/zola /app/bin/zola"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/getzola/zola/archive/v0.5.0.tar.gz",
                    "sha256": "718aaec6e0db6c0e6fb310d8a1ef3978f41a173e39b1c2515ca7365690b09cff"
                }
            ]
        }
    ]
}
